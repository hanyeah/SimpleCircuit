<div style="min-height: 75px; width: 100%; text-align: center; padding: 5px; border: 1px solid #eeeeee; position: relative;">
    @if (_loading > 0)
    {
        <div class="spinner-border loading-icon @((_loading > 1 ? "text-danger" : "text-primary"))" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    }
    @if (_svg != null)
    {
        @((MarkupString)_svg)
    }
    else
    {
        <h2 class="text-muted">Preview</h2>
    }
</div>

@code {
    [Parameter]
    public string Svg
    {
        get => _svg;
        set
        {
            _svg = value;
            StateHasChanged();
        }
    }

    [Parameter]
    public int Loading
    {
        get => _loading;
        set
        {
            if (value != _loading)
            {
                _loading = value;
                StateHasChanged();
            }
        }
    }

    private string _svg;
    private int _loading;
}
